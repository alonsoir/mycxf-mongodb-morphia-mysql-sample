<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

    <!-- these are included in the dependency jar -->
    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

    <!-- rest jpa container -->
    <jaxrs:server id="sampleSerivceREST" address="/rest">
        <jaxrs:serviceBeans>
            <ref bean="sampleServiceRESTGateway"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <bean class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>
            <bean class="com.aironman.sample.service.ExceptionHandler"/>
        </jaxrs:providers>
    </jaxrs:server>

    <!-- soap jpa container -->
    <jaxws:endpoint
            id="sampleServiceSOAP"
            implementor="#sampleServiceSOAPGateway"
            address="/soap"
            serviceName="sampleSoapService"/>

	
	<!-- rest mongo container with spring-mongo -->
    <jaxrs:server id="sampleMongoServiceREST" address="/mongorest">
        <jaxrs:serviceBeans>
            <ref bean="sampleServiceMongoRESTGateway"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <bean class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>
            <bean class="com.aironman.sample.service.ExceptionHandler"/>
        </jaxrs:providers>
    </jaxrs:server>
	
	 <!-- soap mongo container -->
    <jaxws:endpoint
            id="sampleMongoServiceSOAP"
            implementor="#sampleServiceMongoSOAPGateway"
            address="/mongosoap"
            serviceName="sampleMongoSoapService"/>

	<!-- rest mongo container with morphia -->
    <jaxrs:server id="sampleMorphiaServiceREST" address="/morphia">
        <jaxrs:serviceBeans>
            <ref bean="sampleServiceMorphiaRESTGateway"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <bean class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>
            <bean class="com.aironman.sample.service.ExceptionHandler"/>
        </jaxrs:providers>
    </jaxrs:server>

</beans>